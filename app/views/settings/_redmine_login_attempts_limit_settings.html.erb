
  <%= tag.p do%>
    <%= content_tag :label, l(:attempts_limit) %>
    <%= text_field_tag 'settings[attempts_limit]', settings[:attempts_limit] %>
  <% end %>

  <%= tag.p do%>
    <%= content_tag :label, l(:block_minutes) %></th>
    <%= text_field_tag 'settings[block_minutes]', settings[:block_minutes] %>
  <% end %>

  <%= tag.p do%>
    <%= content_tag :label, l(:blocked_notification) %>
    <%= check_box_tag 'settings[blocked_notification]', true, settings[:blocked_notification] %>
  <% end %>

  <%= tag.p class: 'buttons' do%>
    <%= link_to l(:button_reset_counter), login_attempts_limit_clear_path, method: :get, data: { confirm: l(:text_are_you_sure) }, class: 'reset-counter-button' %>
  <% end %>

