
  <%= tag.p do%>
    <%= content_tag :label, l('settings.attempts_limit') %>
    <%= text_field_tag 'settings[attempts_limit]', settings[:attempts_limit] %>
  <% end %>

  <%= tag.p do%>
    <%= content_tag :label, l('settings.block_minutes') %></th>
    <%= text_field_tag 'settings[block_minutes]', settings[:block_minutes] %>
  <% end %>

  <%= tag.p do%>
    <%= content_tag :label, l('settings.blocked_notification') %>
    <%= check_box_tag 'settings[blocked_notification]', true, settings[:blocked_notification] %>
  <% end %>

  <%= tag.p do%>
    <%= content_tag :label, l('settings.counter') %>
    <%= link_to l(:button_clear).downcase, login_attempts_limit_clear_path, method: :get, data: { confirm: l(:text_are_you_sure) } %>
  <% end %>

